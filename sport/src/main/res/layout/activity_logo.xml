<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_height="match_parent"
                android:background="@color/main_color"
                tools:context="com.maneater.app.sport.activity.LogoActivity">

    <ImageView
            android:id="@+id/vLogo"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_logo"
            android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:id="@+id/vLytLogin"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.maneater.base.widget.ClearEditText
                android:id="@+id/vEtxLogin"
                android:hint="手机号码"
                android:text="18538509510"
                android:drawableLeft="@drawable/icon_login_name"
                style="@style/EditTextInput"
                android:inputType="phone"
                android:drawablePadding="@dimen/size_dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.maneater.base.widget.ClearEditText
                android:id="@+id/vEtxPassword"
                android:text="123456"
                android:drawableLeft="@drawable/icon_login_pass"
                android:hint="密码"
                android:drawablePadding="@dimen/size_dp_5"
                android:layout_marginTop="@dimen/size_dp_16"
                style="@style/EditTextInput"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/vBtnLoginACK"
                android:layout_marginTop="@dimen/size_dp_16"
                android:layout_width="match_parent"
                style="@style/BtnCommon"
                android:text="登录"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/vTxToResetPasswordACK"
                android:layout_width="wrap_content"
                android:textSize="@dimen/size_sp_16"
                android:layout_marginTop="@dimen/size_dp_16"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:text="忘记密码"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/vTxToRegisterACK"
                android:layout_width="wrap_content"
                android:textSize="@dimen/size_sp_16"
                android:layout_marginTop="@dimen/size_dp_8"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:text="立即注册"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:id="@+id/vLytOtherLogin"
            android:visibility="gone"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:text="其他登陆方式"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
