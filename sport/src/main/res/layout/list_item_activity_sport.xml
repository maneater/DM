<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="35dp"
            android:layout_height="200dp">

        <ImageView
                android:layout_width="match_parent"
                android:background="@android:color/black"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/vTxStartAddr"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFFFF"
                android:layout_centerInParent="true"
                android:textSize="@dimen/size_sp_18"
                android:text="南门幼儿园"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/vTxName"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/vTxStartAddr"
                android:layout_marginBottom="@dimen/size_dp_10"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/size_sp_26"
                android:layout_centerInParent="true"
                android:text="奔跑吧"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/vTxPlayNumber"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/icon_player_number"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_sp_16"
                android:layout_marginTop="@dimen/size_dp_16"
                android:layout_below="@id/vTxStartAddr"
                android:layout_centerHorizontal="true"
                android:text="1-15人"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/vTxStatus"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/icon_sport_ing"
                android:layout_marginRight="@dimen/size_dp_28"
                android:textSize="@dimen/size_sp_16"
                android:layout_below="@id/vTxStartAddr"
                android:layout_toLeftOf="@id/vTxPlayNumber"
                android:layout_marginTop="@dimen/size_dp_16"
                android:layout_centerHorizontal="true"
                android:text="进行中"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/vTxDistance"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:textSize="@dimen/size_sp_16"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_sport_location"
                android:layout_below="@id/vTxStartAddr"
                android:layout_toRightOf="@id/vTxPlayNumber"
                android:layout_marginLeft="@dimen/size_dp_28"
                android:layout_marginTop="@dimen/size_dp_16"
                android:layout_centerHorizontal="true"
                android:text="1023km"
                android:layout_height="wrap_content"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/size_dp_8"
                android:background="@null"
                android:src="@drawable/icon_share_activity"
                android:layout_height="wrap_content"/>


    </RelativeLayout>

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_logo"/>

</RelativeLayout>
