<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light">

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/main_color</item>
        <!-- 状态栏 -->
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/size_sp_18</item>
    </style>

    <style name="HomeGroupButton">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:textSize">@dimen/size_sp_16</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@drawable/text_color_main_radio_selector</item>
    </style>

    <style name="EditTextInput">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:background">@drawable/edit_bg_shape</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingTop">@dimen/size_dp_8</item>
        <item name="android:paddingBottom">@dimen/size_dp_8</item>
        <item name="android:paddingLeft">@dimen/size_dp_8</item>
        <item name="android:paddingRight">@dimen/size_dp_8</item>
        <item name="android:textSize">@dimen/size_sp_16</item>
    </style>

    <style name="BtnCommon" parent="EditTextInput">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edit_bg_shape</item>
        <item name="android:textSize">@dimen/size_sp_20</item>
    </style>

    <style name="BtnCommonOrange" parent="BtnCommon">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_sp_20</item>
        <item name="android:background">@drawable/btn_orange_bg_selector</item>
    </style>


</resources>
